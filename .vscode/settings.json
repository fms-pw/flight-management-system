// .vscode/settings.json

// @thekailashparihar
// recommends these workspace settings to ensure
// that every contributor enjoys a consistent and optimized editor experience across the entire team.

{
    "workbench.colorTheme": "Monokai Night",
    "workbench.iconTheme": "material-icon-theme",

    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    "editor.fontFamily": "'Consolas', 'JetBrains Mono', 'Ubuntu Mono', 'Courier New', 'monospace'",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.mouseWheelZoom": true,

    "files.autoSave": "afterDelay",

    "git.autorefresh": true,
    "git.autofetch": true,

    "terminal.integrated.fontFamily": "'Consolas', 'JetBrains Mono', 'Ubuntu Mono', 'Courier New', 'monospace'",
    "terminal.integrated.fontLigatures.enabled": true
}
